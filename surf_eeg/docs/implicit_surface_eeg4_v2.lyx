\begin_inset Formula 
\begin{eqnarray*}
\nabla\cdot\vec{n}(s) & = & -2*\text{mean curvature}=\boxed{-2m(s)},\\
\nabla J_{n}\cdot\vec{n} & = & 0\\
\nabla\cdot\vec{J}_{\mathcal{M}}(x) & = & \nabla_{\mathcal{M}}\cdot\vec{J}_{\mathcal{M}}(x)
\end{eqnarray*}

\end_inset

